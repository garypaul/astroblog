---
import '../styles/global.css';
const pageTitle = "About Me";

const identity = {
  firstName: "Gary",
  country: "Canada",
  occupation: "Senior Web Developer",
  hobbies: ["photography", "backpacking", "volleyball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Salsify"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "crimson";
const fontWeight = "bold";
const textCase = "uppercase";
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout pageTitle={pageTitle} currentPage="about">
  <h2>...a new Astro site</h2>
  <p>This site is built using Astro, a modern static site generator.</p>
  <p>Learn more about Astro at <a href="https://astro.build" target="_blank" rel="noopener noreferrer">astro.build</a>.</p>

  <p>Here are a few facts about me:</p>
  <ul>
  <li>My name is {identity.firstName}.</li>
  <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
  {identity.hobbies.length >= 2 &&
      <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
  }
  </ul>
  <p>My skills are:</p>
  <ul class="skills">
      {skills.map((skill) => <li>{skill}</li>)}
  </ul>
  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
</BaseLayout>
<style is:global define:vars={{skillColor, fontWeight, textCase}}>
    h1 {
        color: rebeccapurple;
    }
    .skills li {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
    }
</style>
